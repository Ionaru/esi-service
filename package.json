{
    "name": "@ionaru/esi-service",
    "version": "6.1.0",
    "description": "My package esi-service",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts --ignore-pattern src/__mocks__/*.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/**/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest src",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!dist/**/*"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/esi-service",
    "license": "MIT",
    "peerDependencies": {
        "axios": "0.21.1 - 0.26",
        "debug": "^4.3.1",
        "http-status-codes": "^2.1.4"
    },
    "devDependencies": {
        "@ionaru/eslint-config": "^6.2.1",
        "@types/debug": "^4.1.7",
        "@types/jest": "^27.0.2",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "axios": "^0.26.0",
        "debug": "^4.3.2",
        "eslint": "^8.10.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^26.1.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.13.0",
        "eslint-plugin-unicorn": "^42.0.0",
        "http-status-codes": "^2.1.4",
        "jest": "^27.3.1",
        "timekeeper": "^2.2.0",
        "ts-jest": "^27.0.7",
        "typescript": "^4.4.4"
    }
}
